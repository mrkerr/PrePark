<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_setuplots"
        android:layout_width="152dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@color/accent"
        android:textColor="@color/icons"
        android:gravity="center"
        android:text="Setup Lots"
        android:layout_marginBottom="125dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />

    <Button
        android:id="@+id/button_mylots"
        android:layout_width="152dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@color/accent"
        android:textColor="@color/icons"
        android:gravity="center"
        android:text="My Lots"
        android:layout_alignTop="@+id/button_transactions"
        android:layout_alignStart="@+id/button_searchparking" />

    <Button
        android:id="@+id/button_transactions"
        android:layout_width="152dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@color/accent"
        android:textColor="@color/icons"
        android:gravity="center"
        android:text="Transactions"
        android:layout_above="@+id/button_searchparking"
        android:layout_alignEnd="@+id/button_setuplots"
        android:layout_marginBottom="63dp" />

    <Button
        android:id="@+id/button_searchparking"
        android:layout_width="152dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@color/accent"
        android:textColor="@color/icons"
        android:gravity="center"
        android:text="Search Parking"
        android:layout_alignBottom="@+id/button_setuplots"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />
        android:text="Search Parking" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/primary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_main" />


</RelativeLayout>
