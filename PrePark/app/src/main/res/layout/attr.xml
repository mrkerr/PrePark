<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <declare-styleable android:name= "CTAppTheme">
        <attr android:name = "primaryTextColor" android:format="color"/>
        <attr android:name= "secondaryTextColor" android:format="color"/>
        <attr android:name="dividerColor" android:format="color"/>
        <attr android:name="backgroundCardColor" android:format="color"/>
        <attr android:name="iconPlaceholder" android:format="integer"/>
    </declare-styleable>
    <!-- Light base activity theme -->
    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryTextColor">#F4F4F6</item>
        <item name="secondaryTextColor">#96F4F4F6</item>
        <item name="backgroundCardColor">#FFFF</item>
        <item name="dividerColor">#F2F2F3</item>
        <item name="iconPlaceholder">@drawable/i_light_plholder</item>
    </style>

    <!-- Dark base activity theme -->
</LinearLayout>
