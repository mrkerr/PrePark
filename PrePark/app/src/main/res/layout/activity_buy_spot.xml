<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/address_BS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="ZIP"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/LicensePlateBS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/address_BS"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="License Plate"
        android:inputType="text" />

    <EditText
        android:id="@+id/FromTimeBS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/LicensePlateBS"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LicensePlateBS"
        android:layout_marginBottom="287dp"
        android:layout_marginEnd="98dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="From"
        android:inputType="time" />

    <EditText
        android:id="@+id/ToTimeBS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/LicensePlateBS"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/FromTimeBS"
        android:layout_marginBottom="220dp"
        android:layout_marginEnd="83dp"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:hint="To"
        android:inputType="time" />

    <Button
        android:id="@+id/FindParkingBS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:text="Find Parking" />

</RelativeLayout>